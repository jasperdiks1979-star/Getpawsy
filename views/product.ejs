              const variantIdInput = document.getElementById('selectedVariantId');
              const skuInput = document.getElementById('selectedVariantSku');
              if (variantIdInput) variantIdInput.value = matched.id || '';
              if (skuInput) skuInput.value = matched.sku || '';
              
              if (matched.price) {
                document.querySelector('.pdp-price').textContent = '$' + parseFloat(matched.price).toFixed(2);
                document.querySelector('.pdp-sticky-price').textContent = '$' + parseFloat(matched.price).toFixed(2);
              }
              
              if (matched.image) {
                const imgSrc = matched.image.startsWith('/') ? matched.image : '/api/img?u=' + encodeURIComponent(matched.image);
                document.getElementById('pdpMainImage').src = imgSrc;
              }
            }
          }
        });
      });
      
      document.querySelectorAll('.pdp-accordion-header').forEach(header => {
        header.addEventListener('click', function() {
          const item = this.closest('.pdp-accordion-item');
          item.classList.toggle('open');
        });
      });
      
      function showLocalToast(msg) {
        const toast = document.getElementById('pdpToast');
        if (toast) {
          toast.textContent = msg || 'Added to cart!';
          toast.classList.add('show');
          setTimeout(() => toast.classList.remove('show'), 2500);
        }
      }
      
      const isMultiVariant = productVariants.length > 1;
      const isSingleVariant = productVariants.length === 1;
      const hasNoVariants = productVariants.length === 0;
      
      async function handleAddToCart(btn, e, source) {
        if (e) {
          e.preventDefault();
          e.stopPropagation();
        }
        
        const qty = parseInt(qtyInput.value) || 1;
        const variantIdInput = document.getElementById('selectedVariantId');
        let variantId = variantIdInput ? variantIdInput.value : null;
        
        // Validation for multi-variant
        if (productVariants.length > 1 && (!variantId || variantId === '')) {
          if (window.showToast) window.showToast('Please select a size or option first', 'warning');
          return;
        }

        const matchedVariant = productVariants.find(v => String(v.id) === String(variantId));
        const price = matchedVariant ? matchedVariant.price : <%= safeProduct.price || 0 %>;
        const image = (matchedVariant && matchedVariant.image) ? matchedVariant.image : '<%= firstImage %>';

        const success = await window.addToCartUnified({
          productId: productId,
          variantId: variantId || productId,
          qty: qty,
          title: '<%= productTitle.replace(/'/g, "\\'") %>',
          price: price,
          image: image,
          source: source || 'pdp'
        });

        if (success) {
          btn.classList.add('added');
          setTimeout(() => btn.classList.remove('added'), 1000);
        }
      }
      
      document.getElementById('addToCartBtn').addEventListener('click', function(e) {
        handleAddToCart(this, e, 'pdp-main-button');
      }, { capture: true });
      
      document.getElementById('stickyAtcBtn').addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        handleAddToCart(document.getElementById('addToCartBtn'), e, 'pdp-sticky-bar');
      }, { capture: true });
      
      document.getElementById('wishlistBtn').addEventListener('click', function() {
        if (window.Wishlist && typeof window.Wishlist.toggle === 'function') {
          window.Wishlist.toggle(productId);
        } else {
          showToast('Added to wishlist!');
        }
      });
      
      if (typeof ga4TrackViewItem === 'function') {
        ga4TrackViewItem({
          id: productId,
          title: '<%= productTitle.replace(/'/g, "\\'") %>',
          price: <%= safeProduct.price || 0 %>,
          category: '<%= safeProduct.category || "Pet Products" %>'
        });
      }
    })();
  </script>
  <!-- Fingerprint Badge (debug mode only) -->
  <% if (typeof debug !== 'undefined' && debug) { %>
  <div id="fpBadge" style="position:fixed;bottom:8px;left:8px;z-index:99999;background:rgba(0,0,0,0.9);color:#0f0;font-family:monospace;font-size:10px;padding:4px 8px;border-radius:4px;pointer-events:none;">LIVE: <%= typeof BUILD_FINGERPRINT !== 'undefined' ? BUILD_FINGERPRINT : 'unknown' %></div>
  <% } %>
</body>

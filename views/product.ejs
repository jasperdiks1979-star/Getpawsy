      // Toggle sticky-active class on Pawsy widget for mobile sticky bar
      function updatePawsyPosition() {
        const pawsyWidget = document.getElementById('pawsy-widget') || document.getElementById('pawsyContainer');
        const stickyBar = document.querySelector('.pdp-sticky-bar');
        if (pawsyWidget && stickyBar) {
          const isMobile = window.innerWidth < 768;
          const stickyVisible = isMobile && getComputedStyle(stickyBar).display !== 'none';
          if (stickyVisible) {
            pawsyWidget.classList.add('sticky-active');
            document.documentElement.style.setProperty('--bottom-ui', '88px');

            pawsyWidget.classList.remove('sticky-active');
            document.documentElement.style.setProperty('--bottom-ui', '0px');
          }
        }
      }
      updatePawsyPosition();
      window.addEventListener('resize', updatePawsyPosition);
      window.addEventListener('load', updatePawsyPosition);
      

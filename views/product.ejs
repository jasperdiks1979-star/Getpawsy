          const group = this.closest('.pdp-variant-options');
          group.querySelectorAll('.pdp-variant-btn').forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          
          if (this.dataset.variantId) {
            const variantIdInput = document.getElementById('selectedVariantId');
            const skuInput = document.getElementById('selectedVariantSku');
            if (variantIdInput) variantIdInput.value = this.dataset.variantId || '';
            if (skuInput) skuInput.value = this.dataset.variantSku || '';
            
            if (this.dataset.variantPrice) {
              const price = parseFloat(this.dataset.variantPrice).toFixed(2);

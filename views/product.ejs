<!DOCTYPE html>
<html lang="<%= typeof locale !== 'undefined' ? locale : 'en-US' %>">
<head>
  <%
    const safeProduct = typeof product !== 'undefined' && product ? product : { 
      id: '', name: 'Product Not Found', title: 'Product Not Found', 
      description: 'This product is no longer available.', 
      price: 0, images: ['/images/placeholder.png'], image: '/images/placeholder.png', 
      category: 'all', reviews: 0 
    };
    const productTitle = safeProduct.title || safeProduct.name || 'Product';
    
    // Collect all images: resolved_image, main images + variant images (deduplicated)
    let allImages = [];
    // Start with resolved_image if available (product normalization)
    if (safeProduct.resolved_image) {
      allImages.push(safeProduct.resolved_image);
    }
    // Add from images array
    if (safeProduct.images && safeProduct.images.length > 0) {
      allImages.push(...safeProduct.images);
    } else if (safeProduct.image && !allImages.includes(safeProduct.image)) {
      allImages.push(safeProduct.image);
    }
    // Add variant images if they exist
    if (Array.isArray(safeProduct.variants)) {
      safeProduct.variants.forEach(v => {
        if (v.image && !allImages.includes(v.image)) {
          allImages.push(v.image);
        }
      });
    }
    // Deduplicate and limit to 10 images max
    const seenImages = new Set();
    allImages = allImages.filter(img => {
      if (!img || seenImages.has(img)) return false;
      seenImages.add(img);
      return true;
    }).slice(0, 10);
    
    const productImages = allImages.length > 0 ? allImages : ['/images/placeholder.png'];
    const firstImage = productImages[0] || '/images/placeholder.png';
    
    // Collect videos if available
    const productVideos = [];
    if (safeProduct.videos && Array.isArray(safeProduct.videos)) {
      productVideos.push(...safeProduct.videos.filter(v => v && (v.endsWith('.mp4') || v.endsWith('.webm') || v.endsWith('.mov'))));
    }
    if (safeProduct.video && (safeProduct.video.endsWith('.mp4') || safeProduct.video.endsWith('.webm'))) {
      productVideos.push(safeProduct.video);
    }
    
    const comparePrice = safeProduct.comparePrice || safeProduct.compare_price || null;
    const savings = comparePrice ? (parseFloat(comparePrice) - parseFloat(safeProduct.price)).toFixed(2) : null;
    
    const titleLower = (productTitle || '').toLowerCase();
    const categoryLower = (safeProduct.category || '').toLowerCase();
    const isCarBarrier = titleLower.includes('car barrier') || titleLower.includes('vehicle barrier') || categoryLower.includes('car barrier');
    
    const seo = typeof localizedSeo !== 'undefined' && localizedSeo ? localizedSeo : null;
    const metaDesc = seo?.meta_description || safeProduct.seo_description || 
      (productTitle + ' - Premium pet product at GetPawsy. ' + (safeProduct.description || '').substring(0, 120));
  %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  
  <title><%= productTitle %> | GetPawsy</title>
  <meta name="description" content="<%= metaDesc %>">
  
  <meta property="og:title" content="<%= productTitle %> | GetPawsy">
  <meta property="og:description" content="<%= metaDesc %>">
  <meta property="og:image" content="<%= firstImage %>">
  <meta property="og:type" content="product">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/styles.css?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : 'dev' %>">
  <style>
    .pdp-wrapper {
      padding: var(--space-4) 0 var(--space-16);
      max-width: var(--container-max);
      margin: 0 auto;
      padding-left: var(--space-4);
      padding-right: var(--space-4);
      overflow-x: hidden;
      box-sizing: border-box;
    }
    
    /* Mobile overflow prevention */
    @media (max-width: 767px) {
      html, body {
        overflow-x: hidden;
        max-width: 100%;
        width: 100%;
      }
      .pdp-wrapper {
        padding-left: var(--space-3);
        padding-right: var(--space-3);
        max-width: 100%;
        overflow-x: hidden;
      }
    }
    
    .pdp-breadcrumb {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: var(--space-4) 0;
      font-size: var(--text-sm);
      color: var(--muted);
      overflow-x: auto;
      white-space: nowrap;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
    .pdp-breadcrumb::-webkit-scrollbar { display: none; }
    .pdp-breadcrumb a { color: var(--text-secondary); text-decoration: none; flex-shrink: 0; }
    .pdp-breadcrumb a:hover { color: var(--brand); }
    .pdp-breadcrumb > span:last-child { 
      overflow: hidden; 
      text-overflow: ellipsis; 
      max-width: 200px; 
    }
    
    .pdp-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
    @media (min-width: 768px) {
      .pdp-grid { grid-template-columns: 1fr 1fr; gap: var(--space-12); }
    }
    
    .pdp-gallery {}
    .pdp-main-image {
      position: relative;
      aspect-ratio: 1;
      background: var(--surface);
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-card-premium);
    }
    .pdp-main-image img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .pdp-badge {
      position: absolute;
      top: var(--space-3);
      left: var(--space-3);
      background: var(--brand);
      color: white;
      padding: 0.35rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: var(--text-xs);
      font-weight: 600;
      text-transform: uppercase;
    }
    
    .pdp-thumbs {
      display: flex;
      gap: var(--space-3);
      margin-top: var(--space-4);
      overflow-x: auto;
      padding-bottom: var(--space-2);
    }
    .pdp-thumb {
      flex-shrink: 0;
      width: 72px;
      height: 72px;
      border: 2px solid transparent;
      border-radius: var(--radius-md);
      overflow: hidden;
      cursor: pointer;
      background: var(--surface);
      transition: border-color var(--dur) var(--ease-out);
    }
    .pdp-thumb.active { border-color: var(--brand); }
    .pdp-thumb:hover { border-color: var(--brand); }
    .pdp-thumb img { width: 100%; height: 100%; object-fit: cover; }
    
    .pdp-info {}
    .pdp-category {
      display: inline-block;
      color: var(--brand);
      font-size: var(--text-sm);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: var(--space-2);
    }
    .pdp-title {
      font-size: var(--text-3xl);
      font-weight: 800;
      color: var(--text);
      line-height: var(--leading-tight);
      margin-bottom: var(--space-3);
      word-break: break-word;
      overflow-wrap: anywhere;
      width: 100%;
      max-width: 100%;
    }
    @media (min-width: 768px) {
      .pdp-title { font-size: var(--text-4xl); }
    }
    .pdp-subheadline {
      font-size: var(--text-lg);
      color: var(--text-secondary);
      line-height: var(--leading-relaxed);
      margin-bottom: var(--space-6);
    }
    
    .pdp-rating {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      margin-bottom: var(--space-4);
    }
    .pdp-stars { color: #f59e0b; font-size: 1.1rem; letter-spacing: 2px; }
    .pdp-rating-count { font-size: var(--text-sm); color: var(--muted); }
    
    .pdp-pricing {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: var(--space-3);
      margin-bottom: var(--space-6);
    }
    .pdp-price {
      font-size: var(--text-3xl);
      font-weight: 800;
      color: var(--text);
    }
    .pdp-compare-price {
      font-size: var(--text-xl);
      color: var(--muted);
      text-decoration: line-through;
    }
    .pdp-save-badge {
      background: var(--success);
      color: white;
      padding: 0.3rem 0.75rem;
      border-radius: var(--radius-full);
      font-size: var(--text-sm);
      font-weight: 600;
    }
    
    .pdp-stock {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      margin-bottom: var(--space-6);
      font-size: var(--text-sm);
    }
    .pdp-stock-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--success);
    }
    .pdp-stock-text { color: var(--success); font-weight: 500; }
    
    .pdp-section {
      margin-bottom: var(--space-6);
      padding: var(--space-5);
      background: var(--surface-2);
      border-radius: var(--radius-lg);
    }
    .pdp-section-title {
      font-size: var(--text-base);
      font-weight: 700;
      color: var(--text);
      margin-bottom: var(--space-4);
      display: flex;
      align-items: center;
      gap: var(--space-2);
    }
    .pdp-section-icon {
      width: 20px;
      height: 20px;
      color: var(--brand);
    }
    
    .pdp-benefits-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .pdp-benefits-list li {
      display: flex;
      align-items: flex-start;
      gap: var(--space-3);
      padding: var(--space-2) 0;
      font-size: var(--text-base);
      color: var(--text-secondary);
      line-height: 1.5;
    }
    .pdp-benefits-list li svg {
      flex-shrink: 0;
      width: 20px;
      height: 20px;
      color: var(--success);
      margin-top: 2px;
    }
    
    .pdp-steps {
      counter-reset: step-counter;
    }
    .pdp-step {
      display: flex;
      align-items: flex-start;
      gap: var(--space-4);
      padding: var(--space-3) 0;
    }
    .pdp-step-num {
      flex-shrink: 0;
      width: 28px;
      height: 28px;
      background: var(--brand);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: var(--text-sm);
      font-weight: 700;
    }
    .pdp-step-text {
      font-size: var(--text-base);
      color: var(--text-secondary);
      line-height: 1.6;
    }
    
    .pdp-variants {
      margin-bottom: var(--space-6);
    }
    .pdp-variant-group { margin-bottom: var(--space-4); }
    .pdp-variant-label {
      display: block;
      font-weight: 600;
      font-size: var(--text-sm);
      color: var(--text);
      margin-bottom: var(--space-2);
    }
    .pdp-variant-options { display: flex; flex-wrap: wrap; gap: var(--space-2); }
    .pdp-variant-btn {
      padding: 0.6rem 1.2rem;
      border: 2px solid var(--border);
      border-radius: var(--radius-md);
      background: var(--surface);
      font-weight: 500;
      font-size: var(--text-sm);
      cursor: pointer;
      transition: all var(--dur) var(--ease-out);
    }
    .pdp-variant-btn:hover { border-color: var(--brand); }
    .pdp-variant-btn.active {
      border-color: var(--brand);
      background: var(--brand);
      color: white;
    }
    
    .pdp-actions {
      display: flex;
      gap: var(--space-3);
      margin-bottom: var(--space-4);
    }
    .pdp-qty {
      display: flex;
      align-items: center;
      background: var(--surface-2);
      border-radius: var(--radius-md);
      overflow: hidden;
    }
    .pdp-qty-btn {
      width: 44px;
      height: 48px;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-secondary);
      background: transparent;
      border: none;
      cursor: pointer;
      transition: background var(--dur);
    }
    .pdp-qty-btn:hover { background: var(--border-light); }
    .pdp-qty input {
      width: 50px;
      text-align: center;
      border: none;
      background: transparent;
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--text);
    }
    
    .pdp-atc-btn {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-2);
      padding: var(--space-4) var(--space-6);
      background: var(--brand);
      color: white;
      border: none;
      border-radius: var(--radius-md);
      font-size: var(--text-base);
      font-weight: 700;
      cursor: pointer;
      transition: background var(--dur) var(--ease-out), transform var(--dur-fast);
    }
    .pdp-atc-btn:hover { background: var(--brand-hover); }
    .pdp-atc-btn:active { transform: scale(0.98); }
    .pdp-atc-btn:disabled {
      background: var(--muted);
      cursor: not-allowed;
    }
    .pdp-atc-btn svg { width: 20px; height: 20px; }
    
    .pdp-wishlist-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-2);
      width: 100%;
      padding: var(--space-3);
      border: 2px solid var(--border);
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: var(--text-sm);
      color: var(--text-secondary);
      background: transparent;
      cursor: pointer;
      margin-bottom: var(--space-6);
      transition: all var(--dur);
    }
    .pdp-wishlist-btn:hover { border-color: var(--danger); color: var(--danger); }
    .pdp-wishlist-btn svg { width: 18px; height: 18px; }
    
    .pdp-trust-bar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-3);
      margin-bottom: var(--space-6);
    }
    @media (min-width: 480px) {
      .pdp-trust-bar { grid-template-columns: repeat(4, 1fr); }
    }
    .pdp-trust-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: var(--space-3);
      background: var(--surface-2);
      border-radius: var(--radius-md);
    }
    .pdp-trust-item svg {
      width: 24px;
      height: 24px;
      color: var(--brand);
      margin-bottom: var(--space-2);
    }
    .pdp-trust-item span {
      font-size: var(--text-xs);
      color: var(--text-secondary);
      font-weight: 500;
    }
    
    .pdp-accordion {
      border-top: 1px solid var(--border);
    }
    .pdp-accordion-item {
      border-bottom: 1px solid var(--border);
    }
    .pdp-accordion-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: var(--space-4) 0;
      background: transparent;
      border: none;
      cursor: pointer;
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--text);
      text-align: left;
    }
    .pdp-accordion-header svg {
      width: 20px;
      height: 20px;
      color: var(--muted);
      transition: transform var(--dur);
    }
    .pdp-accordion-item.open .pdp-accordion-header svg {
      transform: rotate(180deg);
    }
    .pdp-accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height var(--dur-slow) var(--ease-out);
    }
    .pdp-accordion-item.open .pdp-accordion-content {
      max-height: 500px;
    }
    .pdp-accordion-inner {
      padding-bottom: var(--space-4);
      font-size: var(--text-sm);
      color: var(--text-secondary);
      line-height: 1.7;
    }
    .pdp-accordion-inner p { margin-bottom: var(--space-3); }
    .pdp-faq-item { margin-bottom: var(--space-4); }
    .pdp-faq-q { font-weight: 600; color: var(--text); margin-bottom: var(--space-1); }
    .pdp-faq-a { color: var(--text-secondary); }
    
    .pdp-related {
      margin-top: var(--space-16);
      padding-top: var(--space-8);
      border-top: 1px solid var(--border);
    }
    .pdp-related-title {
      font-size: var(--text-2xl);
      font-weight: 700;
      margin-bottom: var(--space-6);
      text-align: center;
    }
    .pdp-related-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
    }
    @media (min-width: 768px) {
      .pdp-related-grid { grid-template-columns: repeat(4, 1fr); }
    }
    .pdp-related-card {
      background: var(--surface);
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-card);
      transition: box-shadow var(--dur), transform var(--dur);
      text-decoration: none;
    }
    .pdp-related-card:hover {
      box-shadow: var(--shadow-card-hover);
      transform: translateY(-4px);
    }
    .pdp-related-card-img {
      aspect-ratio: 1;
      overflow: hidden;
    }
    .pdp-related-card-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .pdp-related-card-info {
      padding: var(--space-4);
    }
    .pdp-related-card-title {
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-2);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .pdp-related-card-price {
      font-size: var(--text-base);
      font-weight: 700;
      color: var(--brand);
    }
    
    .pdp-sticky-bar {
      display: none; /* Controlled by PawsyRouter lifecycle */
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      max-width: 100%;
      background: var(--surface);
      border-top: 1px solid var(--border);
      padding: var(--space-3) var(--space-4);
      /* Respect iOS Safe Area */
      padding-bottom: calc(var(--space-3) + env(safe-area-inset-bottom, 12px));
      z-index: 999;
      box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
      box-sizing: border-box;
      transition: transform 0.3s ease-in-out;
    }
    @media (max-width: 767px) {
      .pdp-sticky-bar { display: flex; align-items: center; gap: var(--space-3); }
      .pdp-wrapper { padding-bottom: calc(100px + env(safe-area-inset-bottom, 0)); }
    }
    .pdp-sticky-thumb {
      width: 48px;
      height: 48px;
      border-radius: var(--radius-md);
      overflow: hidden;
      flex-shrink: 0;
    }
    .pdp-sticky-thumb img { width: 100%; height: 100%; object-fit: cover; }
    .pdp-sticky-price {
      font-size: var(--text-lg);
      font-weight: 700;
      color: var(--text);
    }
    .pdp-sticky-atc {
      flex: 1;
      padding: var(--space-3) var(--space-4);
      background: var(--brand);
      color: white;
      border: none;
      border-radius: var(--radius-md);
      font-size: var(--text-base);
      font-weight: 700;
      cursor: pointer;
    }
    .pdp-sticky-atc:disabled { background: var(--muted); cursor: not-allowed; }
    
    .pdp-toast {
      position: fixed;
      bottom: 100px;
      left: 50%;
      transform: translateX(-50%) translateY(20px);
      background: var(--text);
      color: white;
      padding: var(--space-3) var(--space-5);
      border-radius: var(--radius-full);
      font-size: var(--text-sm);
      font-weight: 600;
      opacity: 0;
      pointer-events: none;
      transition: all var(--dur-slow) var(--ease-out);
      z-index: 101;
    }
    .pdp-toast.show {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    @media (min-width: 768px) {
      .pdp-toast { bottom: 40px; }
    }
    
    .pdp-video-section {
      margin-top: var(--space-6);
      background: var(--surface-2);
      border-radius: var(--radius-lg);
      padding: var(--space-4);
    }
    .pdp-video-title {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-3);
    }
    .pdp-video-title svg {
      color: var(--brand);
    }
    .pdp-video-wrapper {
      border-radius: var(--radius-md);
      overflow: hidden;
      background: #000;
    }
    .pdp-video-wrapper video {
      width: 100%;
      max-height: 400px;
      display: block;
    }
  </style>
</head>
<body class="page-product">
  <%- include("partials/header") %>
  
  <main class="pdp-wrapper">
    <nav class="pdp-breadcrumb">
      <a href="/">Home</a>
      <span>›</span>
      <a href="/collection/<%= safeProduct.category || 'all' %>"><%= safeProduct.category ? safeProduct.category.charAt(0).toUpperCase() + safeProduct.category.slice(1) : 'Products' %></a>
      <span>›</span>
      <span><%= productTitle %></span>
    </nav>
    
    <div class="pdp-grid">
      <div class="pdp-gallery">
        <div class="pdp-main-image">
          <%
            const heroImgSrc = firstImage.startsWith('/') ? firstImage : '/api/img?u=' + encodeURIComponent(firstImage) + '&w=900&fm=webp';
          %>
          <img 
            id="pdpMainImage"
            src="<%= heroImgSrc %>" 
            alt="<%= productTitle %>"
            loading="eager"
            decoding="async"
            onerror="this.onerror=null;this.src='/images/placeholder-pawsy.webp'"
            onload="this.style.opacity=1"
            style="opacity:0;transition:opacity .3s"
          >
          <% if (safeProduct.badge) { %>
            <span class="pdp-badge"><%= safeProduct.badge %></span>
          <% } %>
        </div>
        <% if (productImages.length > 1) { %>
          <div class="pdp-thumbs">
            <% productImages.forEach((img, i) => { 
              const thumbSrc = img.startsWith('/') ? img : '/api/img?u=' + encodeURIComponent(img) + '&w=72&fm=webp';
              const fullSrc = img.startsWith('/') ? img : '/api/img?u=' + encodeURIComponent(img) + '&w=900&fm=webp';

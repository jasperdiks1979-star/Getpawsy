<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>SEO Studio | GetPawsy Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Inter', -apple-system, sans-serif; background: #0f0f0f; color: #eaeaea; }
    .admin-container { display: flex; min-height: 100vh; }
    .admin-main { margin-left: 260px; padding: 0; flex: 1; background: #1a1a1a; min-height: 100vh; }
    .admin-content { padding: 25px; }
    h1 { margin-bottom: 25px; color: #fff; }
    .section { background: #252525; border-radius: 12px; padding: 25px; border: 1px solid #333; margin-bottom: 20px; }
    .section h2 { color: #00c4a7; margin-bottom: 20px; font-size: 1.1rem; }
    .btn { background: #00c4a7; color: #000; border: none; padding: 12px 24px; border-radius: 6px; cursor: pointer; font-weight: 600; }
    .btn:hover { background: #00a88f; }
    .btn:disabled { background: #444; cursor: not-allowed; }
    .btn-secondary { background: #333; color: #ccc; }
    .btn-secondary:hover { background: #444; }
    .category-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px; margin-top: 20px; }
    .category-card { background: #333; border-radius: 8px; padding: 20px; }
    .category-card h3 { color: #00c4a7; margin-bottom: 10px; }
    .category-card .seo-status { font-size: 12px; padding: 4px 8px; border-radius: 4px; display: inline-block; margin-bottom: 10px; }
    .seo-complete { background: #065f46; color: #6ee7b7; }
    .seo-missing { background: #991b1b; color: #fca5a5; }
    .seo-partial { background: #78350f; color: #fcd34d; }
    .meta-preview { background: #1a1a1a; border-radius: 6px; padding: 15px; margin-top: 15px; }
    .meta-preview .title { color: #8ab4f8; font-size: 18px; margin-bottom: 5px; }
    .meta-preview .url { color: #6ee7b7; font-size: 14px; margin-bottom: 5px; }
    .meta-preview .desc { color: #bbb; font-size: 14px; line-height: 1.4; }
    .progress-info { background: #1a1a1a; border-radius: 8px; padding: 20px; margin-top: 20px; display: none; }
    .progress-bar { height: 8px; background: #333; border-radius: 4px; overflow: hidden; margin: 10px 0; }
    .progress-fill { height: 100%; background: linear-gradient(90deg, #00c4a7, #00a88f); transition: width 0.3s; }
  </style>
</head>
<body>
  <div class="admin-container">
    <%- include("../partials/admin/admin_sidebar", { active: 'seo-studio' }) %>
    
    <main class="admin-main">
      <%- include("../partials/admin/admin_header", { pageTitle: 'SEO Studio' }) %>
      
      <div class="admin-content">
        <h1>üîç SEO Studio</h1>
        
        <div class="section">
          <h2>üìù Category SEO Generator</h2>
          <p style="color: #999; margin-bottom: 20px;">Generate SEO-optimized titles, descriptions, and FAQs for all categories.</p>
          
          <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <button class="btn" onclick="generateAllSEO(false)" id="generate-btn">üöÄ Generate All Category SEO</button>
            <button class="btn btn-secondary" onclick="generateAllSEO(true)">üëÅÔ∏è Preview (Dry Run)</button>
          </div>
          
          <div class="progress-info" id="progress-info">
            <div id="progress-text">Starting...</div>
            <div class="progress-bar">
              <div class="progress-fill" id="progress-fill" style="width: 0%;"></div>
            </div>
          </div>
        </div>
        
        <div class="section">
          <h2>üìÅ Category SEO Status</h2>
          <div class="category-grid" id="category-grid">
            <div style="color: #666;">Loading...</div>
          </div>
        </div>
      </div>
    </main>
  </div>
  
  <script>
    async function loadCategories() {
      try {
        const res = await fetch('/api/admin/seo/categories');
        const data = await res.json();
        
        if (data.ok) {
          renderCategories(data.categories || []);
        }
      } catch (err) {
        document.getElementById('category-grid').innerHTML = '<div style="color: #f66;">Error loading categories</div>';
      }
    }
    
    function renderCategories(categories) {
      const grid = document.getElementById('category-grid');
      if (!categories.length) {
        grid.innerHTML = '<div style="color: #666;">No categories found</div>';
        return;
      }
      
      grid.innerHTML = categories.map(cat => {
        const hasTitle = !!cat.seoTitle;
        const hasDesc = !!cat.seoDescription;
        const hasFaq = (cat.faqs || []).length > 0;
        
        let status = 'missing';
        let statusText = 'Missing SEO';
        if (hasTitle && hasDesc && hasFaq) {
          status = 'complete';
          statusText = 'Complete';
        } else if (hasTitle || hasDesc) {
          status = 'partial';
          statusText = 'Partial';
        }
        
        return `
          <div class="category-card">
            <h3>${cat.icon || 'üì¶'} ${cat.name}</h3>
            <span class="seo-status seo-${status}">${statusText}</span>
            
            ${hasTitle ? `
              <div class="meta-preview">
                <div class="title">${cat.seoTitle}</div>
                <div class="url">getpawsy.com/c/${cat.slug}</div>
                <div class="desc">${cat.seoDescription || ''}</div>
              </div>
            ` : '<p style="color: #666; font-size: 13px;">No SEO data yet</p>'}
            
            <div style="margin-top: 15px;">
              <button class="btn btn-secondary" onclick="generateCategorySEO('${cat.slug}')" style="padding: 8px 16px; font-size: 13px;">Generate</button>
            </div>
          </div>
        `;
      }).join('');
    }
    
    async function generateAllSEO(dryRun = false) {
      const btn = document.getElementById('generate-btn');
      const progress = document.getElementById('progress-info');
      const progressText = document.getElementById('progress-text');
      const progressFill = document.getElementById('progress-fill');
      
      btn.disabled = true;
      progress.style.display = 'block';
      progressText.textContent = dryRun ? 'Running preview...' : 'Generating SEO...';
      progressFill.style.width = '10%';
      
      try {
        const res = await fetch('/api/admin/seo/generate-all', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ dryRun })
        });
        
        const data = await res.json();
        
        progressFill.style.width = '100%';
        progressText.textContent = dryRun 
          ? `Preview complete: ${data.count || 0} categories would be updated`
          : `Done: ${data.count || 0} categories updated`;
        
        if (!dryRun) {
          loadCategories();
        }
      } catch (err) {
        progressText.textContent = 'Error: ' + err.message;
      } finally {
        btn.disabled = false;
      }
    }
    
    async function generateCategorySEO(slug) {
      try {
        const res = await fetch(`/api/admin/seo/generate/${slug}`, { method: 'POST' });
        const data = await res.json();
        
        if (data.ok) {
          alert('SEO generated successfully!');
          loadCategories();
        } else {
          alert('Error: ' + (data.error || 'Unknown error'));
        }
      } catch (err) {
        alert('Error: ' + err.message);
      }
    }
    
    loadCategories();
  </script>
</body>
</html>

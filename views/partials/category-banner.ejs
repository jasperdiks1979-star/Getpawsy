<section class="category-banner">
  <div class="category-banner__image">
    <img src="<%= banner.image %>" alt="<%= banner.title %>" loading="lazy" onerror="this.style.display='none'">
  </div>
  <div class="category-banner__content">
    <h2><%= banner.title %></h2>
    <p><%= banner.subtitle %></p>
    <a href="<%= banner.ctaLink %>" class="btn btn-primary pawsy-btn pawsy-btn-primary">
      <%= banner.ctaText %>
    </a>
  </div>
</section>
